<Window x:Class="Auralis.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auralis"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <StackPanel Margin="16" VerticalAlignment="Center">

        <TextBlock Text="Primary Audio Source" FontWeight="Bold"/>
        <ComboBox x:Name="PrimaryCombo"
                  Margin="0,4,0,12"
                  DisplayMemberPath="DisplayName"/>

        <TextBlock Text="Secondary Audio Source" FontWeight="Bold"/>
        <ComboBox x:Name="SecondaryCombo"
                  Margin="0,4,0,20"
                  DisplayMemberPath="DisplayName"/>

        <Button Content="Apply"
                Height="32"
                HorizontalAlignment="Right"
                Width="100"
                Click="OnApplyClicked"/>
    </StackPanel>
</Window>
